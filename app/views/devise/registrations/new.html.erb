<div class="flex items-center justify-center min-h-[90vh]">
  <div class="card w-full max-w-md shadow-lg bg-base-100 m-4">
    <div class="card-body">
      <h1 class="text-2xl font-bold text-center mb-6">Criar Conta</h1>

      <%= form_with model: resource,
                    as: resource_name,
                    url: registration_path(resource_name),
                    local: true do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-control mb-4">
          <%= f.label :name, "Nome", class: "label font-semibold" %>
          <%= f.text_field :name, class: "input input-bordered w-full" %>
        </div>

        <div class="form-control mb-4">
          <%= f.label :email, "E-mail", class: "label font-semibold" %>
          <%= f.email_field :email, class: "input input-bordered w-full" %>
        </div>

        <div class="form-control mb-4">
          <%= f.label :password, "Senha", class: "label font-semibold" %>
          <%= f.password_field :password, class: "input input-bordered w-full" %>
        </div>

        <div class="form-control mb-4">
          <%= f.label :password_confirmation, "Confirmar Senha", class: "label font-semibold" %>
          <%= f.password_field :password_confirmation, class: "input input-bordered w-full" %>
        </div>

        <div class="form-control mt-6">
          <%= f.submit "Criar Conta", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <p class="text-center mt-4">
        JÃ¡ tem conta?
        <%= link_to "Entrar", new_user_session_path, class: "link link-primary font-bold" %>
      </p>
    </div>
  </div>
</div>